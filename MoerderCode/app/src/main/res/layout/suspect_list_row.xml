<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="40dp"


    >

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="   "
        android:id="@+id/txt_color_field"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="#1a1919"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txt_name_of_thing"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txt_name_of_room"
        android:layout_alignStart="@+id/txt_name_of_room" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txt_name_of_room"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txt_name_of_weapon"
        android:layout_alignStart="@+id/txt_name_of_weapon" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txt_name_of_weapon"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txt_color_field"
        android:layout_toEndOf="@+id/txt_color_field"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />

</RelativeLayout>